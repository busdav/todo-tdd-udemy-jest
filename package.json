{
  "name": "todo-tdd-udemy-jest",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.7.5",
    "node-mocks-http": "^1.8.0"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!app.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 100,
        "functions": 70,
        "lines": 70
      }
    }
  }
}
